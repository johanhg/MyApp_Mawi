<head>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script src="https://smtpjs.com/v3/smtp.js"></script>

</head>

<header>

<div class="jumbotron text-center">

  <h2>HEADER</h2>

</div>

</header>


<body>
  <p id="notice"><%= notice %></p>

  <div class="text-center border border-light p-5">
      <h1>Data</h1>
  </div>

  <div class="container" >
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Totalingress</th>
          <th>Sector</th>
          <th>Workyears</th>
          <th>Amount</th>
          <th>Frecuency</th>
          <th>Paytime</th>
          <th>Calcular</th>
          <th colspan="3"></th>
        </tr>
     </thead>

     <tbody id="datum_table">
       <% @datos.each do |datum,index| %>
         <tr id="<%= datum.id%>">
           <td><%= datum.name %></td>
           <td><%= datum.email %></td>
           <td><%= datum.totalIngress %></td>
           <td><%= datum.sector %></td>
           <td><%= datum.workYears %></td>
           <td><%= datum.amount %></td>
           <td name="frecuency"><%= datum.frecuency %></td>
           <td><%= datum.payTime %></td>
           <td><button class="btn btn-primary btn-sm" type="button" name="button" onclick=pay_calculate(<%= datum.payTime  %>,<%= datum.amount %>,<%= datum.id %>)>Click</button></td>
           <td><%= link_to 'Destroy', datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
 </div>

<div class="container">

 <div class="row">
   <div class="offset-md-2 col-md-3 mt-2">
     <strong>Crear nueva Data</strong>
   </div>
 </div>

 <div class="row">
   <div class="col-md-3">
     <%= link_to 'Click Here!', new_dato_path %>
   </div>
 </div>

</div>

<br><br>

<div class="container">
 <div class="row">
   <div class="offset-md-2 col-md-3 mt-2">
     <strong>Información del Cálculo</strong>
   </div>
   <div class="col-md-5 ">
  <input type="text" class="form-control" id="info_calc" value="no information" disabled style="margin-left: -108px;">
  </div>
 </div>
</div>
<br><br>
<div class="container">
 <div class="row">
   <div class="col-md-4">
     <strong>Si desea enviar la Información al correo</strong>
   </div>
   <div class="col-md-1">
     <button class="btn btn-primary btn-sm" type="button" name="button" onclick="send_mail()" style="margin-left: -112px;"> Click Here!</button>
   </div>
 </div>
</div>

</body>
